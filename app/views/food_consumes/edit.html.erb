<% provide(:title, '消費食材履歴（更新）') %>
<div class="title">
  <h1>消費食材履歴（更新）</h1>
</div>
<div class="form-wrapper2">
  <%= form_with model: [@user, @food_consume] do |f| %>
  <table class="formTable">
    <form>
    <tr>
      <div class="form-item">
        <th>食材名</th>
        <td>
          <%= @food_stock.name %>
        </td>
      </div>
    </tr>
    <tr>
      <div class="form-item">
        <th>単価</th>
        <td>
          <%= @food_stock.price %> 円
        </td>
      </div>
    </tr>
    <tr>
      <div class="form-item">
        <th>消費年月日</th>
        <td>
          <%= f.datetime_field :start_time, value: Time.current.strftime('%Y-%m-%dT00:00:00') %>
        </td>
      </div>
    </tr>
    <tr>
      <div class="form-item">
        <th>消費数</th>
        <td>
          <%= f.number_field :consume_quantity, min: 0.1, step: "0.1" %> 個
        </td>
      </div>
    </tr>
    <tr>
      <div class="form-item">
        <th>メモ</th>
        <td>
          <%= f.text_field :note, size: 70 %>
        </td>
      </div>
    </tr>
    </form>
  </table>
  <div class="btn-panel2">
    <%= f.submit "更新", class: "update-btn" %>
  </div>
  <% end %>
</div>
<div class="back-btn">
  <%= link_to "戻る", user_food_consumes_path %>
</div>
