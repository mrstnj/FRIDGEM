<% provide(:title, "パスワード再設定") %>
<div class="form-wrapper">
  <h1>パスワード再設定</h1>
  <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
    <form>
      <div class="form-item">
        <%= f.text_field :email, :placeholder => "Eメール" %>
      </div>
      <div class="btn-panel">
        <%= f.submit "送信", class: "login-btn" %>
      </div>
    </form>
  <% end %>
  <div class="form-footer">
  </div>
</div>