<% provide(:title, "ログイン") %>
<div class="form-wrapper">
  <h1>ログイン</h1>
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <form>
      <div class="form-item">
        <%= f.text_field :email, :placeholder => "Eメール" %>
      </div>
      <div class="form-item">
        <%= f.password_field :password, :placeholder => "パスワード" %>
      </div>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>次回から自動でログイン</span>
      <% end %>
      <div class="btn-panel">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    </form>
  <% end %>
  <div class="form-footer">
    <p><a href="#">新規ユーザはこちらへ</a></p>
    <p><a href="#">パスワードを忘れた方はこちらへ</a></p>
  </div>
</div>